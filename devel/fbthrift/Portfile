PortSystem          1.0
PortGroup           cmake 1.1
PortGroup           cxx11 1.1
PortGroup           github 1.0

github.setup        facebook fbthrift 2018.06.04.00 v
categories          devel
platforms           darwin
license             Apache-2

maintainers         nomaintainer

description         Facebook's branch of Apache Thrift, including a new C++ server.
long_description    ${description}

checksums           rmd160  2af453cf3fd1efe4408b93edd42ecec71796b973 \
                    sha256  cee50ee12355b74b73fa709f6cd4628317baacc04b40d1f073d510ee5b38e72a \
                    size    3866165

# doesn't build with libressl as of 2016-09-05
depends_lib-append  port:boost \
                    port:gflags \
                    port:google-glog \
                    port:double-conversion \
                    port:libevent \
                    port:snappy \
                    path:lib/libssl.dylib:openssl \
                    port:mstch \
                    port:wangle \
                    port:folly \
                    port:zstd

patchfiles          DYLD_LIBRARY_PATH.patch

configure.args      -DBUILD_SHARED_LIBS=ON

# fbthrift will fail to build with libcomerr from e2fsprogs, which the kerberos5
# port pulls in as a dependency.
# https://github.com/facebook/fbthrift/issues/278
configure.args-append \
                    -DKRB5_C_CONFIG=/usr/bin/krb5-config \
                    -DKRB5_gssapi_krb5_LIBRARY=/usr/lib/libgssapi_krb5.dylib \
                    -DKRB5_krb5_LIBRARY=/usr/lib/libkrb5.dylib
